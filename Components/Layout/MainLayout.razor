@inherits LayoutComponentBase
@inject IJSRuntime JS
@inject NavigationManager Nav

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-end">
            <button type="button" class="btn btn-link text-danger fw-bold text-decoration-none p-0"
                @onclick="() => HandleLogout()">
                <i class="bi bi-box-arrow-right"></i> Logout
            </button>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private async Task HandleLogout()
    {
        var confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to logout?");

        if (confirmed)
        {
            Nav.NavigateTo("/logout", forceLoad: true);
        }
    }
}